{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build dotnet",
			"group": "build",
			"problemMatcher": "$msCompile",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceRoot}/test01.csproj"
			]
		},
		{
			"label": "Run (dev)",
			"group": "test",
			"type": "shell",
			"problemMatcher": [],
			"command": "dotnet run",
			"args": [],
			"options": {
				"env": {
					"ASPNETCORE_ENVIRONMENT": "Development",
					"ASPNETCORE_URLS": "http://0.0.0.0:5000"
				}
			}
		},
		{
			"label": "Run (dev --no-build)",
			"group": "test",
			"type": "shell",
			"problemMatcher": [],
			"command": "dotnet run --no-build",
			"args": [],
			"options": {
				"env": {
					"ASPNETCORE_ENVIRONMENT": "Development",
					"ASPNETCORE_URLS": "http://0.0.0.0:5000"
				}
			}
		},
		{
			"label": "Run (prod)",
			"group": "test",
			"type": "shell",
			"problemMatcher": [],
			"command": "dotnet run",
			"args": [],
			"options": {}
		},
		{
			"type": "gulp",
			"task": "clean",
			"problemMatcher": []
		},
		{
			"type": "gulp",
			"task": "site.js",
			"problemMatcher": [
				"$gulp-tsc"
			]
		},
		{
			"type": "gulp",
			"task": "default",
			"problemMatcher": [
				"$gulp-tsc"
			]
		},
		{
			"type": "gulp",
			"task": "site.min.js",
			"problemMatcher": [
				"$gulp-tsc"
			]
		},
		{
			"type": "gulp",
			"task": "style.css",
			"problemMatcher": [
				"$node-sass"
			]
		}
	]
}