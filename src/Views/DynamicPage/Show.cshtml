@inherits ItemTTT.Views.BaseView
@{
	Init( PageHelper );

	var parameters = PageHelper.Parameters;
	var item = (ItemTTT.Views.DynamicPageController.ShowModel)Model;
}
@section Scripts
{
<script ttt-only-if="PageHelper.IsAuthenticated" src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.9.2/tinymce.min.js" integrity="sha384-kVYX8VboA0JojawCjMIZxOjynoW5k1G61gLF6uN1WHPGYA73jMug2ueDOVJAS4dJ" crossorigin="anonymous"></script>
<script ttt-only-if="PageHelper.IsAuthenticated" src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.9.2/jquery.tinymce.min.js" integrity="sha384-5DCs0atV/hXpQogb6lHKuobEvuCEeEVXxyhuqnMXVHdXrSZChvc4RqiT4PwinVjp" crossorigin="anonymous"></script>
<script ttt-only-if="PageHelper.IsAuthenticated" type="text/javascript">
	ttt.dynamicpage.show.init({	$blockingDiv	: $('#f14a4f82'),
								itemCode		: @Html.Raw(JSON(item.ItemCode)),
							} );
	ko.applyBindings( ttt.dynamicpage.show, $('#f14a4f82')[0] );
</script>
}

<div id="f14a4f82">
	<div data-bind="tinymceEditor:textHtml">@Html.Raw(item.Text)</div>

	<button ttt-only-if="PageHelper.IsAuthenticated" data-bind="click:save">Save</button>
</div>
