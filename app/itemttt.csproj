<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		<!-- Enable Razor views compilations -->
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.ViewCompilation" Version="2.2.*" PrivateAssets="All" />

		<!-- Support for EntityFramework -->
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.*" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="3.1.*" />
		<!-- For 'dotnet ef XXX' commands: -->
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="3.1.*" />

		<!-- For image processing (requires libgdiplus on Linux) -->
		<PackageReference Include="System.Drawing.Common" Version="4.7.*" />
	</ItemGroup>

</Project>
